<section class="section-card">
  <header>
    <h1 class="section-title">{{title}}</h1>
    <p style="color:var(--muted);">{{updatedAt}}</p>
  </header>
  <div class="legal-section">
    {{#each sections}}
      <article>
        <h3>{{heading}}</h3>
        {{#each body}}
          <p>{{this}}</p>
        {{/each}}
      </article>
    {{/each}}
  </div>
</section>
