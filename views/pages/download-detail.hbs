{{#if isNotFound}}
  <section class="section-card not-found">
    <h1 class="section-title">{{title}}</h1>
    <p style="color:var(--muted);">{{description}}</p>
    <a class="pill-button" href="{{actionHref}}">{{actionLabel}}</a>
  </section>
{{else}}
  <section class="section-card download-detail-header">
    <div class="media-frame">
      {{#if download.tutorialVideo}}
        <iframe src="{{download.tutorialVideo}}" allowfullscreen title="{{download.name}} tutorial"></iframe>
      {{else}}
        <img src="{{download.coverImage}}" alt="{{download.name}}" style="position:absolute;inset:0;width:100%;height:100%;object-fit:cover;" />
      {{/if}}
    </div>
    <div class="download-info">
      <span class="hero-badge"><i class="fa-solid fa-screwdriver-wrench"></i>{{download.tagline}}</span>
      <h1 class="hero-title" style="font-size:2.2rem;">{{download.name}}</h1>
      <p style="color:var(--muted);">{{download.description}}</p>
      <div class="download-links">
        {{#each download.downloadLinks}}
          <a class="{{#if (eq type 'mirror')}}mirror{{/if}}" href="{{url}}" target="_blank" rel="noopener">
            <i class="fa-solid {{#if (eq type 'primary')}}fa-cloud-arrow-down{{else if (eq type 'mirror')}}fa-link{{else}}fa-code-branch{{/if}}"></i>
            {{label}}
          </a>
        {{/each}}
      </div>
    </div>
  </section>

  <section class="section-card">
    <h2 class="section-title">{{#if (eq locale 'en')}}What you get{{else}}O que você recebe{{/if}}</h2>
    <div class="list-grid">
      {{#each download.highlights}}
        <li>{{this}}</li>
      {{/each}}
    </div>
  </section>

  <section class="section-card">
    <h2 class="section-title">{{#if (eq locale 'en')}}Requirements{{else}}Requisitos{{/if}}</h2>
    <ul class="list-grid">
      {{#each download.requirements}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </section>

  <section class="section-card">
    <h2 class="section-title">FAQ</h2>
    <div class="faq-block">
      {{#each download.faqs}}
        <article class="faq-item">
          <h3>{{question}}</h3>
          <p style="color:var(--muted);">{{answer}}</p>
        </article>
      {{/each}}
    </div>
  </section>

  {{#if download.extraNotes}}
    <section class="section-card">
      <h2 class="section-title">{{#if (eq locale 'en')}}Notes{{else}}Observações{{/if}}</h2>
      <ul class="list-grid">
        {{#each download.extraNotes}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </section>
  {{/if}}

  <section class="section-card">
    <h2 class="section-title">{{#if (eq locale 'en')}}Related downloads{{else}}Downloads relacionados{{/if}}</h2>
    <div class="projects-grid">
      {{#each related}}
        <article class="project-card">
          <span class="badge">{{name}}</span>
          <p>{{tagline}}</p>
          <a class="pill-button" style="align-self:flex-start;padding:10px 18px;" href="{{../../downloadBase}}/{{slug}}">{{#if (eq ../../locale 'en')}}View{{else}}Ver{{/if}}</a>
        </article>
      {{/each}}
    </div>
  </section>
{{/if}}
